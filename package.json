{
    "name": "cross-ci",
    "version": "1.6.0",
    "bin": {
        "cross-ci": "./bin/cross-ci.js"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/streamich/cross-ci.git"
    },
    "scripts": {
        "build": "npm run build:readme",
        "build:readme": "mmarkdown --src ./build/readme.md --out README.md --scripts ./build/mmd.js",
        "test": "jest",
        "eslint": "eslint --ignore-path .gitignore './**/*.js'",
        "precommit": "npm run eslint",
        "prepush": "npm t"
    },
    "dependencies": {
        "env-ci": "^2.1.0"
    },
    "devDependencies": {
        "glob": "7.1.2",
        "mmarkdown": "1.0.0",
        "eslint": "4.19.1",
        "eslint-config-mailonline": "9.0.0",
        "mol-conventional-changelog": "1.4.0",
        "jest": "22.4.3",
        "jest-tap-reporter": "1.9.0",
        "husky": "0.14.3"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/mol-conventional-changelog"
        }
    },
    "keywords": [
        "ci",
        "cross",
        "cross-ci",
        "environment",
        "variables",
        "env",
        "vars",
        "travis",
        "circle",
        "travisci",
        "circleci"
    ],
    "jest": {
        "reporters": [
            "jest-tap-reporter"
        ]
    }
}
